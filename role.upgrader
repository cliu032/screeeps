            creep.memory.upgrading = false;
            creep.say('ðŸ”„ waiting');
	    }
	    if(!creep.memory.upgrading && creep.carry.energy > 0) {
	        creep.memory.upgrading = true;
	        creep.say('âš¡ upgrade');
	    }

	    if(creep.memory.upgrading) {
